<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="css/style.css" />
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <header>
      <a href="#" id="logo">CRUD APP</a>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/form">Add User</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
      <button id="btn">Contact</button>
    </header>

    <main>
      <div class="delete_all">
        <button id="deleteAllUsers" data-delete-all-users="">Delete All</button>
      </div>
      <div class="users">
        <% result.forEach(user => { %>
        <div class="user">
          <h1 id="username">
            <a href="/single-user/<%=user._id%>"
              ><%= user.username.toUpperCase() %></a
            >
          </h1>
          <p><%= user.state.toUpperCase() %></p>
          <p><%= user.DOB %></p>
          <p><%= user.age %></p>
          <p><%= user.gender.toUpperCase() %></p>
          <p>
            <i
              id="delete"
              data-delete="<%= user._id %>"
              class="fa-solid fa-trash"
            ></i>
          </p>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
  <script src="js/script.js"></script>
</html>
